extends ../templates/default
block estilo
      link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
      link(rel='stylesheet', href='/stylesheets/bootstrap-social.css')
      link(rel='stylesheet', href='/stylesheets/signin.css')      
block content
    div(class='col-md-6 col-md-offset-3') 
      if message.length >0
        div(class='alert alert-success' role='alert')=message
      if authmessage.length >0
        div(class='alert alert-danger' role='alert')=authmessage
      div(class='panel panel-default')
        div(class='panel-heading text-center')
          b
            h3='Iniciar Sesi√≥n'
        div
          hr
          div(class="col-md-3")
          div(class="col-md-2")
            a(class="btn btn-social-icon btn-facebook")
              span(class="fa fa-facebook")
          div(class="col-md-2")
            a(class="btn btn-social-icon btn-twitter")
              span(class="fa fa-twitter")
          div(class="col-md-2")
            a(class="btn btn-social-icon btn-google")
              span(class="fa fa-google") 
        div(class='panel-body')
        div(class='panel-body')
          form(action='#' method='post' autocomplete='off')
            div(class='form-group')
              label(for="email")= 'Email'
              input(type='text' name='username' placeholder='Email' class='form-control')
            div(class='form-group')
              label(for="password")= 'Password'
              input(type='password' name='password' placeholder='Password' class='form-control')
            button(type="submit" class='btn btn-success')= 'Iniciar Sesion'